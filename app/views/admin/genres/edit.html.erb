<div class="container white-bg p-5">
<h4 class="admin-title">トピックジャンル編集</h4>

  <h4 class="py-5">
    <%= form_with model: @topic_genre, url: admin_genre_path(@topic_genre), local: true do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="d-flex mb-3" style="gap: 80px;">
        <%= f.label :name, "ジャンル名", class: "form-label" %>
        <%= f.text_field :name %>
        <%= f.submit "変更", class: "btn btn-success", style: "border-radius: 8px;" %>
      </div>
    <% end %>
  </h4>
</div>

