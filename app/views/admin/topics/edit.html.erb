
<div class="container-fluid d-flex justify-content-center my-4">
  <div class="w-100" style="max-width: 600px;">
    <div class="card shadow-sm p-4">
      <h2 class="text-center mb-4">トピック編集</h2>
      <%= form_with model: [:admin,@artist, @topic], local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="mb-3">
          <%= f.label :title, "トピック名", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", rows: 7 %>
        </div>
        <div class="mb-3">
          <%= f.label :body, "説明文", class: "form-label" %>
          <%= f.text_area :body, class: "form-control", rows: 7 %>
        </div>
        <div class="mb-3">
          <%= f.label :topic_genre_id, "ジャンル", class: "form-label" %>
          <%= f.collection_select :topic_genre_id, TopicGenre.all, :id, :name, { prompt: "ジャンルを選択" }, class: "form-control" %>
        </div>
        <div class="text-center mt-4">
          <span class="mr-3"><%= f.radio_button :is_active, true %> <%= f.label :is_active, "表示中", value: true %></span>
          <span class="ml-3"><%= f.radio_button :is_active, false %> <%= f.label :is_active, "非表示中", value: false %></span>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "保存", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>