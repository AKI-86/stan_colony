<div class="container-fluid d-flex justify-content-center my-4">
  <div class="w-100" style="max-width: 600px;">
  <div class="card shadow-sm p-4">
  <h2 class="text-center mb-4">ユーザー情報編集</h2>
    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="mb-3">
        <%= f.label :name, "ユーザー名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :email, "", class: "form-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :introduction, "紹介文", class: "form-label" %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :gender, "性別", class: "form-label" %>
        <%= f.select :gender, ["男性", "女性", "その他", "未回答"], { prompt: "選択してください" }, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :age, "年代", class: "form-label" %>
        <%= f.select :age, ["10代以下", "20代", "30代", "40代", "50代", "60代以上"], { prompt: "選択してください" }, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :image, "画像", class: "form-label" %>
        <div class="custom-file">
          <%= f.file_field :image, class: "custom-file-input", id: "user_image", accept: "image/*" %>
          <%= f.label :image, "画像を選択", class: "custom-file-label", for: "user_image" %>
        </div>
        <div class="text-center mt-4">
          <span class="mr-3"><%= f.radio_button :is_active, true %> <%= f.label :is_active, "有効" %></span>
          <span class="ml-3"><%= f.radio_button :is_active, false %> <%= f.label :is_active, "退会" %></span>
        </div>
      <div class="text-center mt-4">
        <%= f.submit "保存", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
