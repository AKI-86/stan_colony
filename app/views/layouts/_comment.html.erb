<div class="card mb-3">
  <div class="card-body">
    <div class="d-flex align-items-center mb-2">
      <span class="me-1"><%= comment.id %>.</span>
      <%= link_to user_path(comment.user) do %>
        <%= image_tag comment.user.get_image(20, 20), class: "rounded-circle me-1" %>
        <strong><%= comment.user.name %></strong>
      <% end %>
      <span class="ms-auto text-muted" style="font-size: 0.85em;">
        <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
      </span>
    </div>
    <p class="mb-2"><%= comment.body %></p>
    <% if comment.user == current_user %>
      <%= link_to "削除", polymorphic_path([comment.commentable, comment]), method: :delete,
          data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-outline-danger" %>
    <% end %>
  </div>
</div>