<div class="container d-flex justify-content-center">
  <div class="w-100" style="max-width: 400px;">
    <h2 class="text-center mb-4">アーティスト情報編集</h2>
    <%= form_with model: @artist do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="mb-3">
        <%= f.label :name, "アーティスト名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= f.label :introduction, "説明文", class: "form-label" %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>
      <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="d-grid">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>