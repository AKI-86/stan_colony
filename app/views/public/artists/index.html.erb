<div class="container-fluid my-5">
  <p><%= link_to "新規作成", new_artist_path %></p>
  <div class="row">
    <% @artists.each do |artist| %>
      <div class="col-3">
        <%= link_to artist_path(artist) do %>
          <%= image_tag artist.get_image(200, 200), class: "img-thumbnail", style: "width: 200px; height: 200px; object-fit: cover;" %>
        <% end %>
        <h5><%= artist.name %></h5>
        <p>
          <%= link_to user_path(artist.user) do %>
            <%= artist.user.name %>
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>