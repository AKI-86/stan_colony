<div class="container-fluid my-5">
  <h2>タグ: <%= @group_tag.name %> のサークル一覧</h2>
  <div class="row">
    <% if @groups.any? %>
      <% @groups.each do |group| %>
        <div class="col-6 col-sm-4 col-md-3 col-lg-2 mb-4 d-flex justify-content-center">
          <div class="text-center" style="width: 100%; max-width: 220px;">
            <%= link_to group_path(group) do %>
              <%= image_tag group.get_image(200, 200), class: "img-fluid rounded-circle mb-2" %>
            <% end %>
            <h5 class="group_name text-break" style="min-height: 3em;"><%= truncate(group.name, length: 30) %></h5>
          </div>
        </div>
      <% end %>
      <div class="d-flex justify-content-center my-4">
        <%= paginate @groups %>
      </div>
    <% else %>
      <p>このタグに紐づくサークルはいません。</p>
    <% end %>
  </div>
</div>