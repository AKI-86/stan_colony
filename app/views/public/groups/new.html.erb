<div class="container p-5">
  <div class="row">

    <h1>グループ作成</h1>
    <%= form_with model: @group do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <h4>グループ名</h4>
      <%= f.text_field :name %>
      <h4>説明文</h4>
      <%= f.text_area :introduction %>
      <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>
