<div class="container p-5">
  <%= link_to "サークル一覧に戻る", groups_path, class: "btn return-btn-a mb-2" %>
  
  <div class="card mb-4">
    <div class="row">
      <div class="col-md-3 d-flex align-items-center justify-content-center m-3">
        <%= image_tag @group.get_image(200, 200), class: "img-thumbnail", style: "object-fit: cover;" %>
      </div>
      <div class="col-md-8 p-3">
        <h4><%= @group.name %></h4>
        <p><%= @group.introduction %></p>
        <p>
          作成者：
          <%= link_to user_path(@group.owner) do %>
            <%= image_tag @group.owner.get_image(30, 30), class: "rounded-circle me-1" %>
            <%= @group.owner.name %>
          <% end %><br>
          作成日：<%= @group.created_at.strftime("%Y年%m月%d日(%a) %H時%M分") %>
        </p>
        <p>タグ：
          <% if @group.group_tags.any? %>
          <% @group.group_tags.each do |tag| %>
            <%= link_to tag.name, group_tag_path(tag.name), class: "badge badge-pill badge-success me-1" %>
          <% end %>
        <% else %>
          タグはまだありません
        <% end %>
        </p>
        <p>
        <% if (current_user && !current_user.guest?) || admin_signed_in? %>
          <% if current_user && current_user.joined_groups.include?(@group) || admin_signed_in? %>
            <%= link_to "チャットルームへ", group_chat_messages_path(@group) %>
            <% if current_user && current_user.joined_groups.include?(@group) %>
              <%= button_to "脱退する", group_group_membership_path(@group), method: :delete, class: "btn btn-danger" %>
            <% end %>
          <% else %>
            <% if current_user %>
              <%= button_to "参加する", group_group_membership_path(@group), method: :post, class: "btn btn-primary" %>
            <% end %>
          <% end %>
        <% else %>
          <p class="text-danger">未ログイン・ゲストユーザーはサークルに参加できません。</p>
        <% end %>
      </p>

      <% if current_user && !current_user.guest? %>
        <%= render 'public/shared/dropdown_menu', type: :group, dropdown_id: "group", group: @group %>
      <% end %>

      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center my-4">
    <%= paginate @group_comments %>
  </div>

  <% if (current_user && !current_user.guest?) || admin_signed_in? %>
    <h4 class="mb-3">コメント</h4>
    <% if @group_comments.any? %>
      <% @group_comments.each_with_index do |comment, index| %>
        <% number = @group_comments.total_count - ((@group_comments.current_page - 1) * @group_comments.limit_value + index) %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="d-flex align-items-center mb-2">
              <span class="mr-1"><%= number %>.</span>
                <% if admin_signed_in? %>
                  <%= link_to admin_user_path(comment.user) do %>
                    <%= image_tag comment.user.get_image(20, 20), class: "rounded-circle me-1" %>
                    <strong><%= comment.user.name %></strong>
                  <% end %>
                <% else %>
                  <%= link_to user_path(comment.user) do %>
                    <%= image_tag comment.user.get_image(20, 20), class: "rounded-circle me-1" %>
                    <strong><%= comment.user.name %></strong>
                  <% end %>
                <% end %>
              <br>
              <span class="ms-auto text-muted ml-2" style="font-size: 0.85em;"><%= comment.created_at.strftime("%Y年%m月%d日(%a) %H時%M分") %></span>
            </div>
            <% if comment.deleted? %>
              <p class="mb-2 text-muted">このコメントは削除されました。</p>
            <% else %>
              <p class="mb-2"><%= comment.body %></p>
              <%= render 'public/shared/dropdown_menu', type: :group_comment, dropdown_id: "group_comment#{comment.id}", group: @group, comment: comment %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted">まだコメントはありません。</p>
    <% end %>

    <div class="d-flex justify-content-center my-4">
      <%= paginate @group_comments %>
    </div>
    <% else %>
      <p class="text-muted">ゲストユーザーはサークルのコメントを閲覧することはできません。</p>
    <% end %>

  <% if current_user && current_user.joined_groups.include?(@group) %>
  <!-- コメントフォーム -->
  <div class="card p-3 mt-4">
    <h5 class="mb-3">コメントする</h5>
    <%= form_with(model: [@group, @group_comment], local: true) do |f| %>
      <div class="form-group mb-3">
        <%= f.text_area :body, class: "form-control", rows: 3 %>
      </div>
      <%= f.submit "投稿", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% elsif admin_signed_in? %>
  <p class="text-muted">管理者はコメントできません。</p>
  <% else %>
  <p class="text-muted">サークルのメンバーのみコメントが可能です。参加申請をしてください。</p>
<% end %>
</div>
