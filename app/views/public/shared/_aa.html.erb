<div class="dropdown" style="position: absolute; bottom: 0.5rem; right: 0.5rem;">
  <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="<%= dropdown_id %>" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    …
  </button>
  <div class="dropdown-menu" aria-labelledby="<%= dropdown_id %>">
    <% case type %>
    <% when :group_comment %>
      <% if current_user && !current_user.guest? %>
        <%= link_to new_report_path(reportable_type: "GroupComment", reportable_id: resource.id), class: "dropdown-item" do %>
          <i class="fa-solid fa-bullhorn"></i> 通報
        <% end %>
      <% end %>
      <% if resource.user == current_user || admin_signed_in? %>
        <%= link_to "削除", group_group_comment_path(resource.group, resource), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "dropdown-item" %>
      <% end %>

    <% when :artist %>
      <%= link_to new_report_path(reportable_type: "Artist", reportable_id: resource.id), class: "dropdown-item" do %>
        <i class="fa-solid fa-bullhorn"></i> 通報
      <% end %>

    <% when :user %>
      <%= link_to new_report_path(reportable_type: "User", reportable_id: resource.id), class: "dropdown-item" do %>
        <i class="fa-solid fa-bullhorn"></i> 通報
      <% end %>
    <% end %>
  </div>
</div>