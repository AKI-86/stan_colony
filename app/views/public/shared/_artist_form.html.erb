<div class="card shadow-sm p-4">
  <h2 class="text-center mb-4 heading-black"><%= form_title %></h2>
  <%= form_with model: @artist do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="mb-3">
      <%= f.label :name, "アーティスト名", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :introduction, "説明文", class: "form-label" %>
      <%= f.text_area :introduction, class: "form-control", rows: 10 %>
    </div>
    <div class="mb-3">
      <%= f.label :tag_names, "タグ（カンマ区切りで最大10個）" %><br>
      <%= text_field_tag :tag_names, @artist.artist_tags.pluck(:name).join(", "), placeholder: "例: ロック, ポップ, インディーズ", id: "tag_input", class: "form-control" %>
      <small id="tag_limit_warning" style="color: red; display: none;">タグは最大10個までです。</small>
    </div>
    <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <div class="custom-file">
        <%= f.file_field :image, class: "custom-file-input", id: "artist_image", accept: "image/*" %>
        <%= f.label :image, "画像を選択", class: "custom-file-label", for: "artist_image" %>
      </div>
    </div>
    <div class="text-center mt-4">
      <%= f.submit submit_label, class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>

<div class="accordion mt-5" id="aboutAccordion">
  <%= render 'public/homes/about_artist_rule' %>
</div>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    const tagInput = document.getElementById("tag_input");
    const warning = document.getElementById("tag_limit_warning");

    tagInput.addEventListener("input", function() {
      const tags = tagInput.value.split(",").map(tag => tag.trim()).filter(tag => tag.length > 0);
      if (tags.length > 10) {
        warning.style.display = "inline";
      } else {
        warning.style.display = "none";
      }
    });
  });
</script>