<div class="tabs">
  <ul class="nav nav-tabs" >
    <li class="nav-item">
      <a class="nav-link active text-dark font-weight-bold" data-toggle="tab" href="#section1">作成アーティスト：<%= @artists.size %>件</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark font-weight-bold" data-toggle="tab" href="#section2"><i class="fas fa-heart"></i>したアーティスト：<%= @favorite_artists.size %>件</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark font-weight-bold" data-toggle="tab" href="#section3">作成サークル：<%= @groups.size %>件</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark font-weight-bold" data-toggle="tab" href="#section4">参加中サークル：<%= @joined_groups.size %>件</a>
    </li>
    <li class="nav-item ">
      <a class="nav-link text-dark font-weight-bold" data-toggle="tab" href="#section5">フォロー：<%= @following_users.size %>人</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark font-weight-bold" data-toggle="tab" href="#section6">フォロワー：<%= @follower_users.size %>人</a>
    </li>
  </ul>

  <!-- タブ1 -->
  <div class="tab-content">
    <div id="section1" class="tab-pane fade show active my-3">
      <div class="mypage-tab-scroll">
        <% if @artists.present? %>
          <% @artists.each do |artist| %>
            <div class="my-2">
              <%= link_to artist_path(artist.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag artist.get_image(50, 50), class: "rounded-circle img-fluid" %>
                <span class="ml-2"><%= truncate(artist.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　作成したアーティストはありません</p>
        <% end %>
      </div>
    </div>

    <!-- タブ2 -->
    <div id="section2" class="tab-pane fade my-3">
      <div class="mypage-tab-scroll">
        <% if @favorite_artists.present? %>
          <% @favorite_artists.each do |artist| %>
            <div class="my-2">
              <%= link_to artist_path(artist.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag artist.get_image(50, 50), class: "rounded-circle img-fluid" %>
                <span class="ml-2"><%= truncate(artist.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　<i class="fas fa-heart"></i>したアーティストはいません</p>
        <% end %>
      </div>
    </div>

    <!-- タブ3 -->
    <div id="section3" class="tab-pane fade my-3">
      <div class="mypage-tab-scroll">
        <% if @groups.present? %>
          <% @groups.each do |group| %>
            <div class="my-2">
              <%= link_to group_path(group.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag group.get_image(50, 50), class: "img-fluid" %>
                  <span class="ml-2"><%= truncate(group.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　作成したサークルはありません</p>
        <% end %>
      </div>
    </div>

    <!-- タブ4 -->
    <div id="section4" class="tab-pane fade my-3">
      <div class="mypage-tab-scroll">
        <% if @joined_groups.any? %>
          <% @joined_groups.each do |group| %>
            <div class="my-2">
              <%= link_to group_path(group.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag group.get_image(50, 50), class: "img-fluid" %>
                <span class="ml-2"><%= truncate(group.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　参加中のサークルはありません。</p>
        <% end %>
      </div>
    </div>
    
    <!-- タブ5 -->
    <div id="section5" class="tab-pane fade my-3">
      <div class="mypage-tab-scroll">
        <% if @following_users.present? %>
          <% @following_users.each do |user| %>
            <div class="my-2">
              <%= link_to user_path(user.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag user.get_image(50, 50), class: "rounded-circle me-1" %>
                <span class="ml-2"><%= truncate(user.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　フォローしているユーザーはいません</p>
        <% end %>
      </div>
    </div>

    <!-- タブ6 -->
    <div id="section6" class="tab-pane fade my-3">
      <div class="mypage-tab-scroll">
        <% if @follower_users.present? %>
          <% @follower_users.each do |user| %>
            <div class="my-2">
              <%= link_to user_path(user.id), class: "text-decoration-none text-dark" do %>
                <%= image_tag user.get_image(50, 50), class: "rounded-circle me-1" %>
                <span class="ml-2"><%= truncate(user.name, length: 50) %></span>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <p>　フォロワーはいません</p>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
