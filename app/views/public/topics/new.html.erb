<div class="container-fluid d-flex justify-content-center my-4">
  <div class="w-100" style="max-width: 600px;">
    <div class="card shadow-sm p-4">
      <h2 class="text-center mb-4">トピック作成</h2>
      <%= form_with model: [@artist, @topic], local: true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>

        <div class="mb-3">
          <%= f.label :title, "トピック名", class: "form-label" %>
          <%= f.text_field :title, class: "form-control", rows: 7 %>
        </div>
        <div class="mb-3">
          <%= f.label :body, "本文", class: "form-label" %>
          <%= f.text_area :body, class: "form-control", rows: 7 %>
        </div>
        <div class="mb-3">
          <%= f.label :topic_genre_id, "ジャンル", class: "form-label" %>
          <%= f.collection_select :topic_genre_id, TopicGenre.all, :id, :name, { prompt: "ジャンルを選択" }, class: "form-control" %>
        </div>
        <div class="text-center mt-4">
        <%= f.submit "トピックを作成", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    </div>
    <div class="accordion mt-5" id="aboutAccordion">
      <%= render 'public/homes/about_artist_rule' %>
    </div>
  </div>
</div>
