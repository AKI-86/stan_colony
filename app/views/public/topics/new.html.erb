<div class="container p-5">



  <div class="row">

    <h1>トピック作成</h1>
    <%= form_with model: [@artist, @topic], local: true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
      <h4>トピック名</h4>
      <%= f.text_field :title %>
      <h4>説明文</h4>
      <%= f.text_area :body %>
<div class="form-group">
  <%= f.label :topic_genre_id, "ジャンル" %>
  <%= f.collection_select :topic_genre_id, TopicGenre.all, :id, :name, { prompt: "ジャンルを選択" }, class: "form-control" %>
</div>
      <%= f.submit '投稿' %>
    <% end %>
  </div>
</div>
