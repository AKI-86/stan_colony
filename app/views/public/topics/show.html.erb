<div class="container p-5">
  <%= link_to "アーティストページに戻る", artist_path(@artist), class: "btn return-btn-a mb-2" %>
  <%= link_to artist_path(@artist), class: "d-flex align-items-center text-decoration-none" do %>
    <%= image_tag @artist.get_image(40, 40), class: "rounded-circle m-2" %>
    <span class="h5 mb-0 text-white"><%= @artist.name %></span>
  <% end %>
  
  <div class="card mt-2 mb-4">
    <div class="row">
      <div class="pt-3 px-3 m-3">
        <h4><%= @topic.title %></h4>
        <p class="mb-5"><%= @topic.body %></p>
        <div class="d-flex align-items-center">
          <span>作成者：</span>
          <%= link_to user_path(@topic.user), class: "d-flex align-items-center text-dark mr-2" do %>
            <%= image_tag @topic.user.get_image(25, 25), class: "rounded-circle mr-1" %>
            <%= @topic.user.name %>
          <% end %>
          <%= @topic.user.badges %>
        </div>
        <span>作成日：<%= @artist.created_at.strftime("%Y年%m月%d日(%a) %H時%M分") %></span>
        <% if current_user && !current_user.guest? %>
          <%= render 'public/shared/dropdown_menu', type: :topic, topic: @topic, dropdown_id: "topic_dropdown" %>
        <% end %>
      </div>
    </div>
  </div>

  <hr class="white-hr">
  <!-- コメント部分 -->
  <h3 class="mt-5 text-white">コメント</h3>
  <div class="d-flex justify-content-center mb-3">
    <%= paginate @comments %>
  </div>
  <% @comments.each_with_index do |comment, index| %>
    <% number = @comments.total_count - ((@comments.current_page - 1) * @comments.limit_value + index) %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex align-items-center mb-2">
          <span class="mr-1"><%= number %>.</span>
            <% if comment.user.guest? %>
             <%= comment.user.name %>
            <% elsif admin_signed_in? %>
              <%= link_to admin_user_path(comment.user), class: "d-flex align-items-center text-dark mr-2" do %>
                <%= image_tag comment.user.get_image(20, 20), class: "rounded-circle mr-1" %>
                <%= comment.user.name %>
              <% end %>
              <%= comment.user.badges %>
            <% else %>
              <%= link_to user_path(comment.user), class: "d-flex align-items-center text-dark mr-2" do %>
                <%= image_tag comment.user.get_image(20, 20), class: "rounded-circle mr-1" %>
                <%= comment.user.name %>
              <% end %>
              <%= comment.user.badges %>
            <% end %>
          <span class="text-muted ml-2" style="font-size: 0.85em;"><%= comment.created_at.strftime("%Y年%m月%d日(%a) %H時%M分") %></span>
        </div>
        <% if comment.deleted? %>
          <p class="mb-2 text-muted">このコメントは削除されました。</p>
        <% else %>
          <p class="mb-2"><%= comment.body %></p>

          <% if (current_user.present? || admin_signed_in?) %>
            <%= render 'public/shared/dropdown_menu', type: :topic_comment, dropdown_id: "topic_comment#{comment.id}", comment: comment %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-center my-4">
    <%= paginate @comments %>
  </div>

  <% if current_user && !admin_signed_in? %>
  <!-- コメントフォーム -->
  <div class="card p-3 mt-4">
    <div class="d-flex align-items-center gap-2 mb-2">
      <h5 class="mb-2 mr-2">コメントする</h5>
      <small>(空欄不可・1000字以内)</small>
    </div>
    <%= form_with(model: [@artist, @topic, @comment], local: true) do |f| %>
      <div class="form-group">
        <%= f.text_area :body, class: "form-control", rows: 3 %>
      </div>
      <%= f.submit "投稿", class: "btn btn-primary" %>
    <% end %>
  </div>
  <% elsif admin_signed_in? %>
    <p class="text-muted">管理者はコメントできません。</p>
  <% else %>
   <p class="text-muted">コメントするには会員登録、またはゲストログインを行ってください。</p>
<% end %>
</div>


