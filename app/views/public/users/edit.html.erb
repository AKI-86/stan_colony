<div class="container d-flex justify-content-center">
  <div class="w-100" style="max-width: 400px;">
    <h2 class="text-center mb-4">ユーザー情報編集</h2>


    <%= form_with model: @user do |f| %>
      <%= render "public/shared/error_messages", resource: @user %>
      <div class="mb-3">
        <%= f.label :name, "ユーザー名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "", class: "form-label" %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :introduction, "紹介文", class: "form-label" %>
        <%= f.text_field :introduction, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :gender, "性別", class: "form-label" %>
        <%= f.select :gender, ["男性", "女性", "その他", "未回答"], { prompt: "選択してください" }, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :age, "年代", class: "form-label" %>
        <%= f.select :age, ["10代以下", "20代", "30代", "40代", "50代", "60代以上"], { prompt: "選択してください" }, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "password", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="d-grid">
        <%= f.submit "保存", class: "btn btn-primary" %>
      </div>
    <% end %>
    
  </div>
</div>