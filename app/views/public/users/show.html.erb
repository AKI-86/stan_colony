<div class= "container py-4">
  <div>
    <%= image_tag @user.get_image(50, 50), class: "rounded-circle me-1" %>
    <span style="font-size: 30px;"><%= @user.name %>さんのプロフィール</span>
  </div>

  <div class="mypage_info my-3" style="position: relative;">
    <table class= "table table-hover table-borderless">
      <tbody>
        <tr>
          <td style="width: 30%;">ニックネーム</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>性別</td>
        <td><%= @user.gender %></td>
        </tr>
        <tr>
          <td>年齢</td>
          <td><%= @user.age %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>フォロー</td>
          <td><%= @user.followings.count %></td>
        </tr>
        <tr>
          <td>フォロワー</td>
          <td><%= @user.followers.count %></td>
        </tr>
      </tbody>
    </table>
    <% if user_signed_in? && current_user != @user %>
      <% if current_user.following?(@user) %>
          <%= button_to 'フォローを外す', user_relationship_path(@user, current_user.relationships.find_by(followed_id: @user.id)), method: :delete, class: "btn btn-outline-danger" %>
      <% else %>
        <%= button_to 'フォローする', user_relationships_path(@user), method: :post, class: "btn btn-primary" %>
      <% end %>
    <% end %>


    <% if current_user && !current_user.guest? %>
      <%= render 'public/shared/dropdown_menu', type: :user, dropdown_id: "user", user: @user %>
    <% end %>
  </div>

<!-- タブ -->
  <div class="mypage_date">
  <%= render 'public/shared/user_show_tab' %>
  </div>
</div>
